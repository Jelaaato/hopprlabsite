<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="shortcut icon" href="~/favicon.ico" type="image/x-icon" />
     @Styles.Render("~/content/css")
</head>
<body>

@*navbar & sidebar*@
<div class="navbar navbar-default navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" onclick="openSidebar()">
                <span class="fa fa-bars" style="color:#1B996E;font-size:20px;"></span>
            </button>
            @Html.ActionLink("hopprLab", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav navbar-right" style="cursor:pointer;">
                <li><a href="@Url.Action("Web","Sections")">Web</a></li>
                <li><a href="@Url.Action("Mobile","Sections")">Mobile</a></li>
                <li><a href="@Url.Action("Analytics","Sections")">Analytics</a></li>
                <li><a href="@Url.Action("IoT","Sections")">IoT</a></li>
                @*<li style="padding-left:40px;"><a href="@Url.Action("","")">Developers</a></li>*@
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">Developers&nbsp;<span class="fa fa-angle-down"></span></a>
                    <ul class="dropdown-menu" style="min-width:135px !important;padding-top:10px;padding-bottom:10px;">
                        <li><a href="https://hopprlab.com/openapi" style="font-size:16px;" target="_blank">Open API</a></li>
                    </ul>
                </li>
            </ul>
        </div>
        <div id="sidebar" class="sidebar hidden-lg hidden-md">
            <span class="closeBtn" onclick="closeSidebar()" style="cursor:pointer;">&times;</span>
            <span class="closeBtn" onclick="closeSidebar()" style="cursor:pointer;">&times;</span>
            <div class="sidebarTextWrapper">
                <center>
                    <div class="sidebarTextPadding"><a href="@Url.Action("Web","Sections")"><span class="sidebarText">Web</span></a></div>
                    <div class="sidebarTextPadding"><a href="@Url.Action("Mobile","Sections")"><span class="sidebarText">Mobile</span></a></div>
                    <div class="sidebarTextPadding"><a href="@Url.Action("Analytics","Sections")"><span class="sidebarText">Analytics</span></a></div>
                    <div class="sidebarTextPadding"><a href="@Url.Action("IoT","Sections")"><span class="sidebarText">IoT</span></a></div>
                </center>
            </div>
            <div class="sidebarFooterTextWrapper">
                <center>
                    <div class="sidebarFooterTextPadding">
                        <a data-toggle="collapse" data-target="#dev" href="#dev"><span class="sidebarFooterText">Developers</span></a>
                        <div id="dev" class="collapse">
                            <a href="https://hopprlab.com/openapi" target="_blank"><span class="sidebarFooterText" style="font-size:15px;">Open API</span></a>
                        </div>
                    </div>
                </center>
            </div>
        </div>
    </div>
</div>

@*Body*@
<div class="container-fluid">
    @RenderBody()

    <div class="row noGutter">
        <div class="col-lg-12">
            <div class="footerWrapper">
                <div style="text-align:center;line-height:8vh;">
                    <i class="fa fa-copyright"></i>&nbsp;<span class="footerContent">hopprLab 2017 | info@hopprlab.com</span>
                    @*<i class="fa fa-facebook-square"></i>&nbsp;<i class="fa fa-twitter-square"></i>&nbsp;<i class="fa fa-instagram"></i>*@
                </div>
            </div>
        </div>
    </div>
</div>

@*Footer Section*@
  
</body>
</html>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/modernizr")
@Scripts.Render("~/bundles/bootstrap")
@Scripts.Render("~/bundles/scripts")
