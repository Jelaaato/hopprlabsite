<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap/bootstrap.min.css" rel="stylesheet" />
    @*<link href="~/Content/animate.css" rel="stylesheet" />*@
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/slick/slick.css" rel="stylesheet" />
    <link href="~/Content/slick/slick-theme.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="~/Scripts/typeeffect.js"></script>

    <script src="~/Scripts/jQuery/jquery-3.1.1.min.js"></script>
    <script src="~/Scripts/slick/slick.min.js"></script>
    <script src="~/Scripts/scrollreveal.min.js"></script>
    <script src="~/Scripts/bootstrap/bootstrap.min.js"></script>
</head>
<body>

@*navbar & sidebar*@
<div class="navbar navbar-default navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" onclick="openSidebar()">
                <span class="fa fa-bars" style="color:#1B996E;font-size:20px;"></span>
            </button>
            @Html.ActionLink("hopprLab", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav navbar-right" style="cursor:pointer;">
                <li><a href="@Url.Action("Web","Sections")">Web</a></li>
                <li><a href="@Url.Action("Mobile","Sections")">Mobile</a></li>
                <li><a href="@Url.Action("Analytics","Sections")">Analytics</a></li>
                <li><a href="@Url.Action("IoT","Sections")">IoT</a></li>
                <li style="padding-left:40px;"><a>Developers</a></li>
            </ul>
        </div>
        <div id="sidebar" class="sidebar hidden-lg hidden-md">
            <span class="closeBtn" onclick="closeSidebar()" style="cursor:pointer;">&times;</span>
            <div class="sidebarTextWrapper">
                    <ul class="removeListStyle">
                        <li class="sidebarTextPadding"><a href="@Url.Action("Web","Sections")"><span class="sidebarText">Web</span></a></li>
                        <li class="sidebarTextPadding"><a href="@Url.Action("Mobile","Sections")"><span class="sidebarText">Mobile</span></a></li>
                        <li class="sidebarTextPadding"><a href="@Url.Action("Analytics","Sections")"><span class="sidebarText">Analytics</span></a></li>
                        <li class="sidebarTextPadding"><a href="@Url.Action("IoT","Sections")"><span class="sidebarText">IoT</span></a></li>
                    </ul>
            </div>
            <div class="sidebarFooterTextWrapper">
                <center>
                    <ul class="removeListStyle">
                        <li class="sidebarFooterTextPadding"><a href="@Url.Action("","")"><span class="sidebarFooterText">Developers</span></a></li>
                        <li class="sidebarFooterTextPadding"><a href="@Url.Action("","")"><span class="sidebarFooterText">hopprTeam</span></a></li>
                    </ul>
                </center>
            </div>
        </div>
    </div>
</div>

@*Body*@
<div class="container-fluid">
    @RenderBody()

    <div class="row noGutter">
        <div class="col-lg-12">
            <div class="footerWrapper">
                <div style="text-align:center;line-height:8vh;">
                    <i class="fa fa-copyright"></i>&nbsp;<span class="footerContent">hopprLab 2017 | info@hopprlab.com | <i class="fa fa-facebook-square"></i>&nbsp;<i class="fa fa-twitter-square"></i>&nbsp;<i class="fa fa-instagram"></i></span>
                </div>
            </div>
        </div>
    </div>
</div>

@*Footer Section*@
  
</body>
</html>

<script src="~/Scripts/app.js"></script>
