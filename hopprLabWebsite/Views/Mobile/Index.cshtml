        </div>
        <div class="navbar-collapse collapse" id="navbar">
            <ul class="nav navbar-nav navbar-right nav-padding-top">
                <li><a href="@Url.Action("Index","Web")" class="pointer nav-title">WEB</a></li>
                <li><a href="@Url.Action("Index","Mobile")" class="pointer nav-title">MOBILE</a></li>
                <li><a href="@Url.Action("Index","Analytics")" class="pointer nav-title">ANALYTICS</a></li>
                <li><a href="@Url.Action("Index","IOT")" class="pointer nav-title">IoT</a></li>
            </ul>
        </div>
    </div>
</nav>

